<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/news_reply_layout_background" >

        <ImageView
            android:id="@+id/edit_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/news_reply_img_btn_background" />

        <EditText
            android:id="@+id/word_comment"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:textSize="13sp"
            android:visibility="invisible" />

        <Button
            android:id="@+id/replyBtn"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/word_comment"
            android:background="@drawable/news_reply_post_btn_selector"
            android:text="发表"
            android:textSize="13sp"
            android:visibility="invisible" />

        <LinearLayout
            android:id="@+id/comment_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/edit_comment"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="5dp" >

            <ImageView
                android:id="@+id/comment_divider1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:src="@drawable/news_reply_layout_divider" />
            <!-- 分享 -->

            <ImageView
                android:id="@+id/share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/news_share_btn_selector" />

            <ImageView
                android:id="@+id/comment_divider2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/news_reply_layout_divider" />
            <!-- 收集 -->

            <ImageView
                android:id="@+id/collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/news_collect_btn_selector" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>